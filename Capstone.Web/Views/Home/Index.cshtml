@using Capstone.Web.Models
@model List<Park>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="homeText">National Parks</h2>

@foreach (var park in Model)
{
    <div class="entirePark">

        <img src="~/Content/img/parks/@(park.ParkImage.ToLower()).jpg" class="parkImage"/>

        <div class="parkText">
            <div class="parkName">@Html.ActionLink(@park.Name, "ParkDetail", "Home", new { parkName = park.Name}, null), @park.State</div>
            <div class="parkDescription">@park.Description</div>
        </div>

    </div>
}

